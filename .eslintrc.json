{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "lines-between-class-members": ["warn", "always"],
    "import/prefer-default-export": 0,
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [
          ".js",
          ".ts",
          ".tsx"
        ]
      }
    ],
    "import/no-unresolved": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-restricted-syntax": [
      "warn",
      "ForInStatement"
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "spaced-comment": "off",
    "jsx-a11y/click-events-have-key-events": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".json",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}
